try:
    os.makedirs("/tmp/sysmon_save", exist_ok=True)
    SAVE_DIR = "/tmp/sysmon_save"

except OSError:
    os.makedirs(".sysmon_save", exist_ok=True)
    SAVE_DIR = ".sysmon_save"

# savedir and hwmons setup

